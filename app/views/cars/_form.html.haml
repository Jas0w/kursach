= form_for @car do |f|
  - if @car.errors.any?
    #error_explanation
      %h2= "#{pluralize(@car.errors.count, "error")} prohibited this car from being saved:"
      %ul
        - @car.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :driver
    = f.text_field :driver
  .field
    = f.label :model
    = f.text_field :model
  .field
    = f.label :class_of_car
    = f.select :class_of_car, ['бизнес', 'эконом']
  .field
    = f.label :car_number
    = f.text_field :car_number
  .field
    = f.label :color
    = f.text_field :color
  .field
    = f.label :year
    = f.text_field :year
  .actions
    = f.submit nil, class: 'btn btn-primary'
