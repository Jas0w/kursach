=breadcrumb_tag do
  %li.active
    Автомобили
  %li
    Администрирование

%h1= t('app.cars.index')

%table.table.table-hover.table-striped.center
  %caption
    .pull-right
      = link_to t('app.cars.new-button'), new_car_path, class: 'btn btn-primary'
  %thead
    %tr
      %th= Car.human_attribute_name(:id)
      %th= Car.human_attribute_name(:driver)
      %th= Car.human_attribute_name(:model)
      %th= Car.human_attribute_name(:class_of_car)
      %th= Car.human_attribute_name(:car_number)
      %th= Car.human_attribute_name(:color)
      %th= Car.human_attribute_name(:year)
      %th.p50
      %th.p50
      %th.p50

  %tbody
    - @cars.each do |car|
      %tr
        %td= car.id
        %td= car.driver_id
        %td= car.model
        %td= car.class_of_car
        %td= car.car_number
        %td= car.color
        %td= car.year
        %td
          = link_to car, class: 'btn btn-success' do
            = fa_icon :eye
        %td
          = link_to edit_car_path(car), class: 'btn btn-info' do
            = fa_icon :edit
        %td
          = link_to car, :method => :delete, :data => { :confirm => t('helpers.sure') }, class: 'btn btn-danger' do
            = fa_icon :times



