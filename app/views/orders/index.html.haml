=breadcrumb_tag do
  %li.active
    Заказы
  %li
    Администрирование

%h1= t('app.orders.index')

%table.table.table-hover.table-striped.center
  %caption
    .pull-right
      = link_to t('app.orders.new-button'), new_order_path, class: 'btn btn-primary'
  %thead
    %tr
      %th= Order.human_attribute_name(:tariff)
      %th= Order.human_attribute_name(:car)
      %th= Order.human_attribute_name(:date_of_order)
      %th= Order.human_attribute_name(:time_of_order)
      %th= Order.human_attribute_name(:departure_address)
      %th= Order.human_attribute_name(:end_address)
      %th= Order.human_attribute_name(:passengers)
      %th= Order.human_attribute_name(:distance)
      %th.p50
      %th.p50
      %th.p50

  %tbody
    - @orders.each do |order|
      %tr
        %td= order.tariff
        %td= order.car
        %td= order.date_of_order
        %td= order.time_of_order
        %td= order.departure_address
        %td= order.end_address
        %td= order.passengers
        %td= order.distance
        %td
          = link_to order, class: 'btn btn-success' do
            = fa_icon :eye
        %td
          = link_to edit_order_path(order), class: 'btn btn-info' do
            = fa_icon :edit
        %td
          = link_to order, :method => :delete, :data => { :confirm => t('helpers.sure') }, class: 'btn btn-danger' do
            = fa_icon :times



