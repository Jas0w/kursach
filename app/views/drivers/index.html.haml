=breadcrumb_tag do
  %li.active
    Водители
  %li
    Администрирование

%h1= t('app.drivers.index')

%table.table.table-hover.table-striped.center
  %caption
    .pull-right
      = link_to t('app.drivers.new-button'), new_driver_path, class: 'btn btn-primary'
  %thead
    %tr
      %th= Driver.human_attribute_name(:fn)
      %th= Driver.human_attribute_name(:ln)
      %th= Driver.human_attribute_name(:sn)
      %th= Driver.human_attribute_name(:tin)
      %th= Driver.human_attribute_name(:passport_series)
      %th= Driver.human_attribute_name(:passport_number)
      %th.p50
      %th.p50
      %th.p50

  %tbody
    - @drivers.each do |driver|
      %tr
        %td= driver.fn
        %td= driver.ln
        %td= driver.sn
        %td= driver.tin
        %td= driver.passport_series
        %td= driver.passport_number
        %td
          = link_to driver, class: 'btn btn-success' do
            = fa_icon :eye
        %td
          = link_to edit_driver_path(driver), class: 'btn btn-info' do
            = fa_icon :edit
        %td
          = link_to driver, :method => :delete, :data => { :confirm => t('helpers.sure') }, class: 'btn btn-danger' do
            = fa_icon :times



